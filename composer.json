{
    "name": "aten/drupal-recommended-project",
    "description": "Aten Drupal Project",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.3"
        }
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "aten/aten_standard": "^1.0",
        "composer/installers": "^1.2",
        "hirak/prestissimo": "^0.3.10",
        "drupal/core-recommended": "^9.0",
        "drupal/core-composer-scaffold": "^9.0",
        "cweagans/composer-patches": "1.x-dev",
        "oomphinc/composer-installers-extender": "^1.1"   
    },
    "require-dev": {
        "drush/drush": "^10.0",
        "pr0ject-x/px": "^1.0",
        "pr0ject-x/px-drupal": "^1.0",
        "pr0ject-x/px-drupalvm": "^1.0",
        "geerlingguy/drupal-vm": "^6.0"
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/README.txt": false,
                "[web-root]/INSTALL.txt": false,
                "[web-root]/sites/README.txt": false,
                "[web-root]/themes/README.txt": false,
                "[web-root]/modules/README.txt": false,
                "[web-root]/profiles/README.txt": false,
                "[web-root]/example.gitignore": false,
                "[web-root]/sites/development.services.yml": {
                    "mode": "replace",
                    "path": "assets/sites/development.services.yml",
                    "overwrite": false
                }
            }
        },
        "installer-types": [
            "npm-asset",
            "bower-asset"
        ],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": [
                "type:npm-asset",
                "type:bower-asset",
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
        }
    }
}
